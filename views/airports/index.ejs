<% layout('layouts/boilerplate.ejs') %> 
    <h1>All Airports</h1>
    <div>
        <a href="/airports/new">Add Airport</a>
    </div>
<% for (let airport of airports) { %> 
    <div class="card mb-3">
        <div class="row">
            <div class="col-md-4">
                <img class="img-fluid" src="<%= airport.image %>" alt="">
            </div>
            <div class="col-md-8">
                <div class="card-body">
                    <h5 class="card-title"><%= airport.name %></h5>
                    <p class="card-text"><%= airport.description %></p>
                    <p class="card-text text-muted"><%= airport.location%></p>
                    <a href="/airports/<%=airport._id%>" class="btn btn-primary">View <%= airport.name %></a>
                </div>
            </div>
        </div>
    </div>
<% } %> 