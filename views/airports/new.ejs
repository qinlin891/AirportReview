<% layout('layouts/boilerplate.ejs') %> 
<div class="row">
    <h1 class="text-center">New Airport</h1>
    <div class="col-6 offset-3">
        <form action="/airports" method="POST" novalidate class="validated-form" enctype="multipart/form-data">
            <div class="mb-3">
                <label class="form-label" for="name">Name</label>
                <input class="form-control" type="text" name="airport[name]" id="name" required>
            </div>
            <div class="mb-3">
                <label class="form-label" for="location">Location</label>
                <input class="form-control" type="text" name="airport[location]" id="location" required>
            </div>
            <div class="mb-3">
                <label for="image" class="form-label">Choose image(s)...</label>
                <input class="form-control" type="file" id="image" name="image" multiple>
            </div>
            <div class="mb-3">
                <label class="form-label" for="description">Description</label>
                <textarea class="form-control" type="text" name="airport[description]" id="description" required></textarea>
            </div>
            <div class="mb-3">
                <button class="btn btn-success">Add Airport</button>
            </div>
        </form>
        <a href="/airports">All Airports</a>
    </div>
</div>
